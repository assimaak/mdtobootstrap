<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="projet.bootstrap.generator">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2020-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="projet.bootstrap.generator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/projet.bootstrap.generator/bin"/>
    </path>

    <path id="projet.bootstrap.generator.classpath">
        <path refid="projet.bootstrap.generator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="projet.bootstrap.generator.libraryclasspath.alljars">
        <pathelement location="../projet.bootstrap.generator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="projet.bootstrap.generator.classpath.alljars">
        <path refid="projet.bootstrap.generator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="projet.bootstrap.generator.main.Generate" classpathref="projet.bootstrap.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="projet.bootstrap.generator.main.Generate" classpathref="projet.bootstrap.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
